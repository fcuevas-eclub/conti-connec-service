version: "3"
services:
  app:
    hostname: app
    restart: always
    build:
      context: .
      args:
        - "github_actor=usuario"
        - "github_token=token"
    networks:
      - eclub
    ports:
      - "8080:8080"
    volumes:
      - ./docker-data/certificados:/home/spring/certificados
      - ./docker-data/pendientes:/home/spring/pendientes
      - ./docker-data/procesados:/home/spring/procesados
    env_file:
      - .env
networks:
  eclub:
